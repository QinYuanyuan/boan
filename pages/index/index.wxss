  
page{ 
  position: relative;
  width: 100%;
  height: 100%;  
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 30rpx auto;
  width: 650rpx;
  box-shadow: 0 10rpx 30rpx 5rpx #ccc;
  border-radius: 5rpx;
  background-color: #fff;
}
.container > view{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  line-height: 84rpx;
  font-size: 30rpx;
}

.container > view:nth-child(even){ background-color: #f9f9f9; }

.title{
  position: relative;
  z-index: 3;
  display: inline-block;
  width: 148rpx;
  height: 100%;
}
/*省份  */
.city{ border-bottom: 2rpx dashed #d6d6d6 }

.city image{
  margin-top: 16rpx;
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.city picker{
  width: 300rpx;
  height: 80rpx;
}

 .first-date, .current-price{ 
  position: relative;
}  
/*车型  */
.model > view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  line-height: 84rpx; 
  font-size: 30rpx;
}
.model .model__content{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 420rpx;
  line-height: 84rpx; 
  color: #000;  
  font-size: 28rpx;
  text-align: right;
}
.model__content__outer{
  line-height: 84rpx;
}
.model .model__content .model__content__left{
  display: inline-block;
  text-align: left;
  line-height: 54rpx;
}
.model__content .model__content__right{
  display: inline-block;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  color: #999;
}

.arrow-icon{
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg); 
}
.model .arrow-icon{
   margin-top: 30rpx; 
}

.placeholder{
  color: #999;
  font-size: 28rpx;
}

.content{
  vertical-align: middle;
  color: #999;
  font-size: 28rpx;
}
.content .content__left{
  text-align: left;
  white-space: wrap;
}
.content.focus{
  color: #f90a05;
}

.first-date picker{
  position: absolute;
  top: 0;
  right: 0; 
  margin-right: 30rpx;
  width: 420rpx;
  height: 100%;
  text-align: right;
}
.first-date picker .content{
  right: 0;
}
/*行驶里程 市场现价 */
.distance, .current-price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  font-size: 28rpx;
}
.distance .outer-box, .current-price .outer-box{
  display: flex;
  flex-direction: row;
}
/* .current-price .outer-box{
  width: 200rpx;
  text-align: right;
} */
.outer-box input{
  height: 84rpx;
  line-height: 84rpx;
  text-align: right;
  font-size: 28rpx;
  margin-right: 5rpx;
}
.outer-box input.focus{
  color: #f90a05;
}
.outer-box view.focus{
  color: #f90a05;
}
.outer-box .current-price-box{
  width: 300rpx;
  text-align: right;
}
.distance .black, .current-price .black{
  color: #353535;
}
.distance .gray, .current-price .gray{
  color: #999;
}

/*行驶里程和市场现价不符合标准时的提示信息  */
.distance-warn, .current-price-warn{
  display: flex;
  flex: row;
  justify-content: center;
  width: 100%;
  height: 60rpx;
  border-bottom: 2rpx dashed #d6d6d6;
}
.current-price-warn{
  border-bottom: transparent;
}
.distance-warn image, .current-price-warn image{
  margin-top: 17rpx;
  margin-right: 5rpx;
  width: 24rpx;
  height: 24rpx;
}
.distance-warn view, .current-price-warn view{
  line-height: 60rpx;
  color: #f90a05;
  font-size: 24rpx;
}


/*匹配产品  */
.match-btn{
  margin-top: 50rpx;
  margin-left: 50rpx;
  width: 650rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #f90a05;
  border-radius: 10rpx;
  text-align: center;
}
.disable-btn{
  background-color: #5c5c5c;
}

.gif-container{
  position: fixed;
  top: 260rpx;
  left: 125rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 320rpx;
  background: rgba(0, 0, 0, .6);
  border-radius: 10rpx;
}
.gif-container image{
  width: 120rpx;
  height: 120rpx;
}
.gif-container view{
  color: #fff;
  font-size: 28rpx;
}

.gif-container .correct-icon{
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 50rpx;
}
.gif-container .correct-text{
  margin-left: 20rpx;
}