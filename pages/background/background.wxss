page{
  position: relative;
  width: 100%;
  height: 100%;
}


.background-bottom, .background-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.vin-container{
  position: fixed;
  top: 420rpx;
  left: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 19rpx 25rpx;
  width: 590rpx;
  height: 98rpx;
  line-height: 60rpx;
  border: 1rpx solid #b5b5b5;
  border-radius: 10rpx;
}
.vin-container .vin-title{
  color: #f90a05;
  font-size: 34rpx;
}
.vin-container .line{
  margin: 0 20rpx;
  width: 2rpx;
  height: 58rpx;
  background-color: #dcdcdc;
}
.vin-container input{
  width: 440rpx;
}
.vin-container .placeholder{
  color: #999;
  font-size: 34rpx;
}

